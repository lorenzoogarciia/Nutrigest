<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_crearalimento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearAlimentoActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txt_crearalimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Bienvenido al formulario para crear Alimentos"
            tools:ignore="HardcodedText,SpUsage" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <EditText
            android:id="@+id/cmp_nombre_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Nombre del Alimento"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_cantidad_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Cantidad (gr)"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_calorias_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Calorías"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_kilojulios_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Kilojulios"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_hidratos_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Hidratos de Carbono"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_proteinas_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Proteínas"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_grasas_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Grasas"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_azucares_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Azúcares"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_fibra_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Fibra"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <EditText
            android:id="@+id/cmp_sal_alimento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black"
            android:hint="Sal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_guardaralimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Alimento"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_volveralimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regresar"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>



    <include
        layout="@layout/crearalimento_bar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_crearalimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/navheader_nutricionistas"
        app:menu="@menu/activity_nutrihome_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>